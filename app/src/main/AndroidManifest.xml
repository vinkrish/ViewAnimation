<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viewanimation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AngelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scale"
            android:label="@string/title_activity_scale"
            android:parentActivityName=".AngelActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viewanimation.AngelActivity" />
        </activity>
        <activity
            android:name=".Translate"
            android:label="@string/title_activity_translate"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".Rotate"
            android:label="@string/title_activity_rotate"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".Alpha"
            android:label="@string/title_activity_alpha"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".Combine"
            android:label="@string/title_activity_combine"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".Sequence"
            android:label="@string/title_activity_sequence"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".CycleInterpolator"
            android:label="@string/title_activity_cycle_interpolator"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".RepeatInterpolator"
            android:label="@string/title_activity_repeat_interpolator"
            android:parentActivityName=".AngelActivity" >
        </activity>
        <activity
            android:name=".ProgramAnimation"
            android:label="@string/title_activity_program_animation" >
        </activity>
    </application>

</manifest>
