<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viewanimation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.viewanimation.AngelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.viewanimation.Scale"
            android:label="@string/title_activity_scale"
            android:parentActivityName="com.viewanimation.AngelActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viewanimation.AngelActivity" />
        </activity>
        <activity
            android:name="com.viewanimation.Translate"
            android:label="@string/title_activity_translate"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.Rotate"
            android:label="@string/title_activity_rotate"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.Alpha"
            android:label="@string/title_activity_alpha"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.Combine"
            android:label="@string/title_activity_combine"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.Sequence"
            android:label="@string/title_activity_sequence"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.CycleInterpolator"
            android:label="@string/title_activity_cycle_interpolator"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
        <activity
            android:name="com.viewanimation.RepeatInterpolator"
            android:label="@string/title_activity_repeat_interpolator"
            android:parentActivityName="com.viewanimation.AngelActivity" >
        </activity>
    </application>

</manifest>